<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="SolatButtons" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#484343</item>        
        <item name="android:layout_margin">10px</item>
        <item name="android:padding">12dip</item>          
        <item name="android:background">@layout/buttonshape</item>"
    </style>
    <style name="Widget">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:gravity">center</item>
            <item name="android:layout_margin">2px</item>            
            <item name="android:textSize">12sp</item>
    </style>
    <style name="Widget.Title">
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">5sp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_weight">1</item>        
    </style>
    <style name="Widget.Time">
        <item name="android:gravity">left</item>    
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:textSize">11sp</item>  
        <item name="android:layout_weight">1</item>  
    </style>
</resources>