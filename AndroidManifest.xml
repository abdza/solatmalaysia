<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.abdullahsolutions.solatmalaysia" android:versionCode="4"
	android:versionName="1.3">
	<uses-sdk android:minSdkVersion="7" />

	<uses-permission android:name="android.permission.INTERNET" />
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name="com.abdullahsolutions.solatmalaysia.waktusolat"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="com.abdullahsolutions.solatmalaysia.ZonSolat"
			android:label="@string/select_zone_title">
		</activity>
		<service android:name="com.abdullahsolutions.solatmalaysia.SolatService"  
            android:exported="true" android:label="@string/app_name">
   			<intent-filter><action android:name="com.abdullahsolutions.solatmalaysia.SolatService"></action>
   			</intent-filter>
		</service>		
		<receiver android:name=".SolatWidget" android:label="@string/widget_name">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider" android:resource="@xml/widget"/>
		</receiver>
	</application>
</manifest>